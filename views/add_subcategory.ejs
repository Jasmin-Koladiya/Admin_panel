<%- include('header') %>
<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Form Basic</h4>
        <%if(flash.success && flash.success.length > 0){%>
          <div class="alert alert-success ">
            <%=flash.success%>
          </div>
          <%}%>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Library
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <form class="form-horizontal" method="post" action="/subcategory/insert_subcategory" >
            <div class="card-body">
              <h4 class="card-title">subcategory Info</h4>
              <div>
                <select class="form-control" name="categoryid" id="">
                  <option value=" ">-- select category--</option>
                  <%for (var c of cdata){%>
                    <option value="<%=c.id%>"><%=c.category%></option>
                    <%}%>
                </select>
              </div>
              <div class="form-group row">
                <label for="fname" class="col-sm-3 text-end control-label col-form-label"> Enter subcategory</label>
                <div class="col-sm-9">
                  <input type="text" name="subcategory" class="form-control" id="subcategory" placeholder="Enter subcategory" />
                </div>
              </div>
            </div>
            <div class="border-top">
              <div class="card-body">
                <input type="submit" class="btn btn-primary" value="Submit" name="submit">
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>

    <%- include('footer') %>